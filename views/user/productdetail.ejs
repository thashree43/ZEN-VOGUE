      <script>
  document.addEventListener("DOMContentLoaded", function () {
        // Preload images
        const images = document.querySelectorAll(".zoom-image");
        images.forEach((img) => {
            const src = img.getAttribute("src");
            const image = new Image();
            image.src = src;
        });

        // Initialize Elevate Zoom on the main product image
        $(".zoom-image").elevateZoom({
            zoomType: "inner",
            cursor: "crosshair",
            zoomWindowFadeIn: 1000,
            zoomWindowFadeOut: 1000,
            responsive: true,
            containLensZoom: true,
            gallery: 'thumbnail-gallery',
            galleryActiveClass: 'active',
            imageCrossfade: true,
            loadingIcon: 'https://www.elevateweb.co.uk/spinner.gif',
            onZoomedImageLoaded: function () {
                // Adjust the zoom window position based on the mouse position
                $(".zoomContainer").mousemove(function (e) {
                    var mouseX = e.pageX - $(this).offset().left;
                    var zoomPosition = mouseX / $(this).width();
                    $(".zoomWindow").css("left", zoomPosition * 100 + "%");
                });
            }
        });
    });

</script>

        
        <script>
       function addToCart(id) {
  console.log(id);
  $.ajax({
    url: "/cart",
    method: "post",
    dataType: "json", // Specify that you expect JSON in the response
    data: {
      productId: id, // Use "productId" as the key to match the server-side code
    },
  })
  .done((data) => {
    if (data.success) {
      Swal.fire({
        position: "center",
        icon: "success",
        title: "Product added to cart",
        showConfirmButton: false,
        timer: 1500,
      });
    } else {
      if (data.redirectToLogin) {
        window.location.href = '/login';
      } else {
        // Handle other failure scenarios
        console.error('Failed to add the product to the cart:', data.error);
      }
    }
  })
  .fail((xhr, status, error) => {
    console.error('An error occurred during the add to cart process:', error);
  });
}

      
