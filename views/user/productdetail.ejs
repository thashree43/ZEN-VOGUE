                  </div>
              </div>

              <!-- Thumbnail Images -->
              <div class="col-lg-3 col-md-3">
                  <ul class="nav nav-tabs" role="tablist">
                      <% for (let i=0; i < data.Image.length; i++) { %>
                      <li class="nav-item">
                          <a class="nav-link <% if (i === 0) { %>active<% } %>" data-toggle="tab"
