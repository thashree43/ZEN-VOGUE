

        <%- include("../layouts/userpartials/header.ejs") %>
        <style>
/* Reset some default styles */
body, h1, h2, h3, p, input, a {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Arial', sans-serif;
  background-color: #f5f5f5;
}

.login-container {
  max-width: 400px;
  margin: 50px auto;
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
  text-align: center;
  color: #333;
}

.login-form {
  margin-top: 20px;
}

.form-input {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.login-btn {
  width: 100%;
  padding: 10px;
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.login-btn:hover {
  background-color: #555;
}

h3 {
  text-align: center;
  margin-top: 15px;
  color: #333;
}

a {
  text-decoration: none;
  color: #333;
}
p {
  text-align: center;
  margin-bottom: 10px;
  font-size: 12px; /* Adjust the font size for the "Don't have an account" text */
  color: #555;
}

#reg {
  color: #f70000;
  font-size: 15px; /* Adjust the font size for the signup link */
}

#error {
  color: red;
  font-size: 12px;
}

/* Responsive styles */
@media (max-width: 767px) {
  .login-container {
    max-width: 100%;
  }
}


.login-options {
  text-align: center;
  margin-top: 10px;
}

.login-options p,
.login-options a {
  display: inline;
  margin: 0;
  font-size: 12px; /* Adjust the font size for the text */
  color: #555;
}

.centered {
  text-align: center;
  margin-top: 10px;
}

.centered a {
  font-size: 12px; /* Adjust the font size for the text */
  color: #555;
}


        </style>
       <div class="login-container" style="margin-top: 50px;">
        <h2>Login</h2>
        <form class="login-form" action="" method="post">
            <input type="email" class="form-input" name="email" placeholder="Email">
            <span id="emailError" class="error"></span>
            <input type="password" class="form-input" name="Password" placeholder="Password">
            <span id="passwordError" class="error"></span>
            <button type="submit" class="login-btn">Login</button>
            <div class="login-options">
                <p>Don't have an account?</p><a id="reg" href="/signup">Sign Up</a>
            </div>
            <div class="centered">
                <a href="/forget">Forget Password</a>
            </div>
        </form>
        <% if (messages.length > 0) { %>
          <p style="color: #f60505;" class="error-message"><%= messages[0] %></p>
        <% } %>
        
    </div>
    

        <%- include("../layouts/userpartials/footer.ejs") %>
      